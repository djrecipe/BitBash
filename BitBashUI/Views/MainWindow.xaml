<Window x:Class="Abaci.BitBash.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BitBash" Height="350" Width="525">
    <Window.Background>
        <LinearGradientBrush StartPoint="0.2,0" EndPoint="1,1">
            <GradientStop Color="#DDDDDDDD" Offset="0.2"></GradientStop>
            <GradientStop Color="#88888888" Offset="1"></GradientStop>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TabControl x:Name="tabMain" Background="Transparent" BorderThickness="0">
            <TabItem Header="Live" Width="100" BorderBrush="Transparent" Background="Transparent">
                <Grid Background="Transparent"/>
            </TabItem>
            <TabItem Header="History" Width="100" BorderBrush="Transparent" Background="Transparent">
                <Grid Background="Transparent"/>
            </TabItem>
            <TabItem Header="Settings" Width="100" BorderBrush="Transparent" Background="Transparent">
                <Grid Background="Transparent"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
